<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ParentViewPadding">
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="ExtraLargeFont">
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="fontPath">fonts/fonts/Poppins-Regular.ttf</item>
    </style>

    <style name="LargeFont">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="MediumFont">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="SmallFont">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="VerySmallFont">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="VeryverySmallFont">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="ToolbarTitleFont">
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="ExtraLargeTextView" parent="ExtraLargeFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LargeTextView" parent="LargeFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MediumFontTextView" parent="MediumFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallFontTextView" parent="SmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerySmallFontTextView" parent="VerySmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VeryverySmallFontTextView" parent="VeryverySmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- This theme for splash screen-->
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorSecondaryLightText</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>

    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorOrange</item> <!-- Whatever color you want-->
    </style>

    <style name="MyDialogFragmentStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SeekBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:colorControlNormal">@color/colorDivider</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

</resources>
